<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.administrator.webviewdemo.WebViewMod
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.example.administrator.webviewdemo.WebViewMod>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:id="@+id/ll_xuanze"
        android:visibility="gone"
        android:background="#ffffff"
        >
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:digits="123456789"
            android:maxLength="1"
            android:id="@+id/et"
            android:hint=" "
            />
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            >
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll"
                >

            </LinearLayout>
        </HorizontalScrollView>
        <!-- <Button android:id="@+id/button" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="确定" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:id="@+id/ll_panduan"
        android:visibility="gone"
        android:background="#ffffff"
        >

        <RadioGroup
            android:id="@+id/stcs_rg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ima_sel_true"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ima_sel_false"
                android:button="@null" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:id="@+id/ll_tiankong"
        android:visibility="visible"
        android:background="#F3F3F3"
        >
        <EditText
            android:id="@+id/fx_ed"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:gravity="start"
            android:hint="请输入答案"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
